<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity"
	android:paddingStart="20dp"
	android:paddingEnd="20dp">
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_baseline_arrow_back_24"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:id="@+id/back_button"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/back_button"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/input_area"
			android:layout_marginStart="10sp"
			android:layout_marginEnd="10sp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
			<LinearLayout
				android:layout_marginTop="20sp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:id="@+id/first_part"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<Spinner
						android:textColor="@color/black"
						android:id="@+id/spinner_converted_from"
						android:layout_width="0sp"
						android:layout_weight="0.75"
						android:layout_height="50sp"/>
					<EditText
						android:id="@+id/edit_text_converted_from"
						android:clickable="false"
						android:focusable="false"
						android:textColor="@color/black"
						android:background="    @drawable/shape"
						android:hint="@string/_0"
						android:textColorHint="#696969"
						android:padding="10sp"
						android:layout_width="0sp"
						android:layout_height="50sp"
						android:layout_weight="1.25"
						android:inputType="numberDecimal"
						android:importantForAutofill="no"
						android:gravity="end|center"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:layout_marginTop="10sp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/first_part"
				app:layout_constraintEnd_toEndOf="parent">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<Spinner
						
						android:textColor="@color/black"
						android:id="@+id/spinner_converted_to"
						android:layout_width="0sp"
						android:layout_weight="0.75"
						android:layout_height="50sp"/>
					<EditText
						android:id="@+id/edit_text_converted_to"
						android:clickable="false"
						android:focusable="false"
						android:textColor="@color/black"
						android:background="@drawable/shape"
						android:hint="@string/_0"
						android:inputType="numberDecimal"
						android:padding="10sp"
						android:layout_width="0sp"
						android:layout_height="50sp"
						android:layout_weight="1.25"
						android:gravity="end|center"
						android:textColorHint="#606060"
						android:importantForAutofill="no" />
				</LinearLayout>
			</LinearLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/input_area"
			android:layout_marginTop="25sp">
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center">
				<Button
					android:textColor="#008278"
					android:id="@+id/button_ac"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/ac"
					android:textSize="25sp"
					style="?android:attr/buttonBarButtonStyle" />
				<Button
					android:textColor="#008278"
					android:id="@+id/button_backspace"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/backspace"
					android:textSize="25sp"
					android:layout_marginStart="12sp"/>
			</LinearLayout>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_marginTop="10sp">
				<Button
					android:textColor="#008278"
					android:id="@+id/button7"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_7"
					android:textSize="25sp"/>
				<Button
					android:textColor="#008278"
					android:id="@+id/button8"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_8"
					android:textSize="25sp"
					android:layout_marginStart="12sp"/>
				<Button
					android:textColor="#008278"
					android:id="@+id/button9"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_9"
					android:textSize="25sp"
					android:layout_marginStart="12sp" />
			
			</LinearLayout>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_marginTop="10sp">
				<Button
					android:textColor="#008278"
					android:id="@+id/button4"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_4"
					android:textSize="25sp"/>
				<Button
					android:textColor="#008278"
					android:id="@+id/button5"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_5"
					android:textSize="25sp"
					android:layout_marginStart="12sp"/>
				<Button
					android:textColor="#008278"
					android:id="@+id/button6"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_6"
					android:textSize="25sp"
					android:layout_marginStart="12sp" />
			
			</LinearLayout>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_marginTop="10sp">
				<Button
					android:textColor="#008278"
					android:id="@+id/button1"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_1"
					android:textSize="25sp"/>
				<Button
					android:textColor="#008278"
					android:id="@+id/button2"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_2"
					android:textSize="25sp"
					android:layout_marginStart="12sp"/>
				<Button
					android:textColor="#008278"
					android:id="@+id/button3"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_3"
					android:textSize="25sp"
					android:layout_marginStart="12sp" />
			</LinearLayout>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:layout_gravity="end"
				android:layout_marginTop="10sp">
				<View
					android:layout_width="0sp"
					android:layout_height="0sp"
					android:layout_weight="1" />
				<Button
					android:layout_marginStart="12sp"
					android:textColor="#008278"
					android:id="@+id/button0"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/_0"
					android:textSize="25sp"/>
				<Button
					android:textColor="#008278"
					android:id="@+id/button_decimal"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0sp"
					android:text="@string/decimal"
					android:textSize="25sp"
					android:layout_marginStart="12sp"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>